<Window x:Class="AvalonWizardSample.Mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:aw="http://schemas.pavel.fedarovich.com/winfx/2010/xaml/presentation"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:vm="clr-namespace:AvalonWizardSample.Mvvm.ViewModels"
        xmlns:v="clr-namespace:AvalonWizardSample.Mvvm.Views" 
        xmlns:local="clr-namespace:AvalonWizardSample.Mvvm"
        Title="AvalonWizard MVVM Sample" Height="350" Width="525">
    <Window.DataContext>
        <vm:WizardViewModel />
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="{x:Type vm:Page0ViewModel}">
            <v:Page0View />
        </DataTemplate>
        <DataTemplate x:Key="{x:Type vm:Page1ViewModel}">
            <v:Page1View />
        </DataTemplate>
        <DataTemplate x:Key="{x:Type vm:Page2ViewModel}">
            <v:Page2View />
        </DataTemplate>
        <DataTemplate x:Key="{x:Type vm:Page3ViewModel}">
            <v:Page3View />
        </DataTemplate>
        <DataTemplate x:Key="{x:Type vm:Page4ViewModel}">
            <v:Page4View />
        </DataTemplate>
        <local:ImplicitDataTemplateSelector x:Key="PageSelector" />
    </Window.Resources>
    
    <Grid>
        <aw:Wizard WizardStyle="{Binding SelectedStyle}">
            <i:Interaction.Behaviors>
                <aw:WizardMvvmBehavior
                    ItemsSource="{Binding Pages}" 
                    ItemTemplateSelector="{StaticResource PageSelector}"/>
            </i:Interaction.Behaviors>
        </aw:Wizard>
    </Grid>
</Window>
